import java.util.Scanner;
public class T04Ej03 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		String frase, palabra;
		int num, index ;		
		System.out.println("Introduzca la frase a buscar");
		frase = sc.nextLine();
		System.out.println("Introduzca la palabra a buscar");
		palabra = sc.nextLine();

		if(frase.startsWith(palabra + " ")){
			System.out.println("Está al principio con indice 0");
		}else if(frase.indexOf(" " +palabra +" ") != -1){
			System.out.println("La palabra se encuentra en la posición numero" +  frase.indexOf(" " +palabra +" "));
		}else if(frase.endsWith(" " + palabra)){
			System.out.println("Está al final de la frase.");
		}

	}//main

}//class
